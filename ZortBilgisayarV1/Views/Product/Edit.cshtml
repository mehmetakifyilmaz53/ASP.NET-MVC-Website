

<form action="/product/edit_product" method="post" >
<input type="hidden" name="ProductId" value="@Model.ProductId"/>
    <div class="form-group">
        <label for="Name">Ürün İsmi</label>
        <input type="text" name="Name" value="@Model.Name" class="form-control"> 
    </div>
    <div class="form-group">
        <label for="Price">Ürün Fiyatı</label>
        <input type="text" name="Price" value="@Model.Price" class="form-control"> 
    </div>
    <div class="form-group">
        <label for="describtion">Açıklama</label>
        <textarea type="text" name="describtion" value="@Model.describtion" class="form-control"></textarea> 
    </div>
    <div class="form-group">
        <label for="ImageUrl">Görsel</label>
        <input type="text" name="ImageUrl" value="@Model.ImageUrl" class="form-control"> 
    </div>
     <div class="form-group">
        <label for="CPU">İşlemci</label>
        <input type="text" name="CPU"  value="@Model.CPU" class="form-control"> 
    </div>
    <div class="form-group">
        <label for="GPU">GPU</label>
        <input type="text" name="GPU" value="@Model.GPU" class="form-control"> 
    </div>
    <div class="form-group">
        <label for="CategoryId">Kategori</label>
        <select name="CategoryId" asp-items="@ViewBag.Categories" class="form-control">
            <option selected disabled>Kategori Seçiniz</option>
        </select>
    </div>
    <button type="submit" class="btn btn-danger mt-2" style="margin-bottom: 25px;">Düzenle</button>
</form>
