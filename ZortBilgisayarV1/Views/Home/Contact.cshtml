
@{
    Layout="~/Views/Shared/Components/_LayoutContact.cshtml";
}

 
<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-6">
            <h2 class="mb-4">İletişim Bilgileri</h2>
            <ul class="list-unstyled">
                <li><i class="bi bi-geo-alt-fill"></i> İstanbul, Türkiye</li>
                <li><i class="bi bi-telephone-fill"></i> 0 (212) 555 55 55</li>
                <li><i class="bi bi-envelope-fill"></i> info@zortbilgisayar.com</li>
                <li><i class="bi bi-clock-fill"></i> Pazartesi - Cuma: 09:00 - 18:00</li>
            </ul>
        </div>
        <div class="col-md-6">
            <h2 class="mb-4">İletişim Formu</h2>
            <form action="#" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Ad Soyad</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">E-posta Adresi</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Mesaj</label>
                    <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Gönder</button>
            </form>
        </div>
    </div>
</div>



